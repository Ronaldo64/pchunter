    <Button
        android:id="@+id/button_filter"
        style="@style/PrimaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="FILTRAR" />

</LinearLayout>