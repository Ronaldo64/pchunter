<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/home_text1"
            style="@style/CustomText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="18sp" />

        <TextView
            android:id="@+id/home_text2"
            style="@style/CustomText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail" />

        <EditText
            android:id="@+id/name_home_input"
            style="@style/CustomInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:drawableStart="@drawable/custom_user_icon"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/update_button"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alterar nome" />

        <EditText
            android:id="@+id/password_home_input"
            style="@style/CustomInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:drawableStart="@drawable/custom_password_icon"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/delete_button"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="Excluir conta" />

        <Button
            android:id="@+id/sign_out"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Sair" />

    </LinearLayout>
</FrameLayout>

