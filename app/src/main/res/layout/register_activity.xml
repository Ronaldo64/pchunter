<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".view.RegisterActivity">

    <ProgressBar
        android:id="@+id/progressBarRegister"
        style="?android:attr/progressBarStyle"
        android:layout_width="85dp"
        android:layout_height="24dp"
        android:layout_marginBottom="10dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/email_register"
        style="@style/CustomInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/round_light_input"
        android:drawableStart="@drawable/custom_email_light_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Digite seu e-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName"
        tools:layout_editor_absoluteY="61dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/write">

        <EditText
            android:id="@+id/password_register"
            style="@style/CustomInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_light_input"
            android:drawableStart="@drawable/custom_password_light_icon"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Digite sua senha"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/email_register"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="@+id/email_register"
            tools:layout_editor_absoluteY="121dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/write">

        <EditText
            android:id="@+id/password_register2"
            style="@style/CustomInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/round_light_input"
            android:drawableStart="@drawable/custom_password_light_icon"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Confirme sua senha"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/email_register"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="@+id/email_register"
            tools:layout_editor_absoluteY="121dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_register"
        style="@style/PrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/light_button"
        android:shadowColor="#00FFFFFF"
        android:text="CADASTRAR"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/password_register"
        app:layout_constraintStart_toStartOf="@+id/password_register"
        app:layout_constraintTop_toBottomOf="@+id/password_register" />

    <TextView
        android:id="@+id/textLogin"
        style="@style/CustomText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Já tem conta? Faça login." />

</LinearLayout>